@model Stunning.Model.Funcionarios

@{
    ViewData["Title"] = "Create";
}


<h4>Criar Funcionario</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <div class="col-md-12">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" id="IdFuncionario" value="0" />
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Nome" class="control-label"></label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Cpf" class="control-label"></label>
                            <input asp-for="Cpf" class="form-control" />
                            <span asp-validation-for="Cpf" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="DataCad" class="control-label"></label>
                            <input asp-for="DataCad" asp-format="{0:dd/MM/yyyy HH:mm}" class="form-control" />
                            <span asp-validation-for="DataCad" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Cargo" class="control-label"></label>
                            <input asp-for="Cargo" class="form-control" />
                            <span asp-validation-for="Cargo" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="UfNasc" class="control-label"></label>
                            <select asp-for="UfNasc"
                                    class="form-control"
                                    asp-items="@(new SelectList(@ViewBag.UfNasc,"Selecione"))">
                                <option value="">Selecione UF</option>
                            </select>

                            @*<input asp-for="UfNasc" class="form-control" />*@
                            @*<span asp-validation-for="UfNasc" class="text-danger"></span>*@
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Salario" class="control-label"></label>
                            <input asp-for="Salario" class="form-control money" />
                            <span asp-validation-for="Salario" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Status" class="control-label"></label>
                            <input asp-for="Status" class="form-control" />
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                    </div>

                </div>


                <div class="form-group">
                    <input type="submit" value="Cadastrar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script type="text/javascript">

    $(document).ready(function ($) {
        $('.money').mask("###0.00", { reverse: true });
    })

</script>
